<table class="hoverable centered">
  <thead>
    <tr>
      <th>Applications</th>
      <th>Project Requirements</th>
      <th>Company</th>
      <th>Duration</th>
      <th>Compensation Type</th>
    </tr>
  </thead>
  <tbody>
    <% posting_applications.each do |posting_application| %>
      <tr>
        <td><%= posting_application.posting.title.upcase %></td>
        <td><%= posting_application.posting.description.upcase %></td>
        <td><%= posting_application.posting.employer.name.upcase %></td>
        <td><%= pluralize(posting_application.posting.duration, 'Week').upcase%></td>
        <td><%= posting_application.posting.compensation.upcase %></td>
      </tr>
    <% end %>
  </tbody>
</table>
