<div class="row">
  <div class="col s12">
    <table>
      <tbody>
        <tr>
          <td>School</td>
          <% if student.school_name %>
            <td><a href="#"><%= student.school_name %></a></td>
          <% else %>
            <td class="grey-text lighten-2">No information</td>
          <% end %>
        </tr>
        <tr>
          <td>Department</td>
          <% if student.department_name %>
            <td><a href="#"><%= student.department_name %></a></td>
          <% else %>
            <td class="grey-text lighten-2">No information</td>
          <% end %>
        </tr>
        <tr>
          <td>Major</td>
          <% if student.major_name %>
            <td><a href="#"><%= student.major_name %></a></td>
          <% else %>
            <td class="grey-text lighten-2">No information</td>
          <% end %>
        </tr>
        <tr>
          <td>Graduation year</td>
          <% if student.graduation_year %>
            <td><%= student.graduation_year.year %></td>
          <% else %>
            <td class="grey-text lighten-2">No information</td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>


<% if current_account && current_account.username == params[:id] %>
<%= link_to  postings_index_path(student), class: "waves-effect waves-light btn", method: :get do %>
<i class="mdi-action-assignment right"></i>Job Listings
<% end %>
<% end %>
