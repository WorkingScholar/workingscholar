<div class="container">
<table>
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.name %></td>
        <td><%= employer.username %></td>
        <td><%= employer.email %></td>
        <td><%= link_to 'Show', employer %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
