<div class="container">
  <div class="row">
    <div class="col s12" style="position: relative">
      <div class="section">

        <div class="col s4">
          <div class="logo">
            <%= image_tag("swirl_pattern.png") %>
          </div>
        </div>
        <div class="col s8">
          <h2 style="position: absolute; bottom: 0;"><%= @employer.name %></h2>
        </div>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="col s4">
        <div class="section">
          <%= render "shared/social_sidebar" %>
        </div>
      </div>
      <div class="col s8">
        <div class="section">
          <%= render "profile", employer: @employer %>
        </div>
      </div>
    </div>
  </div>

    <%= link_to 'Show', @employer %>
    <%= link_to 'Edit', edit_employer_path(@employer) %>

</div>
