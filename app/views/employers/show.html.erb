<div class="container">
  <div class="row">
    <div class="col s12" style="position: relative">
      <div class="section">

        <div class="col s4">
          <div class="logo">
            <%= image_tag("swirl_pattern.png") %>
          </div>
        </div>
        <div class="col s6">
          <h4 style="position: absolute; bottom: 0;"><%= @employer.name %></h4>
        </div>
        <div class="col s2" style="position: absolute; bottom: 0; right: 0;">
          <button class="btn waves-effect waves-light" type="submit" name="action">Edit
            <i class="mdi-content-send right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="col s4">
        <div class="section">
          <%= render "shared/social_sidebar" %>
        </div>
      </div>
      <div class="col s8">
        <div class="section">
          <%= render "profile", employer: @employer %>
        </div>
      </div>
    </div>
  </div>
</div>
