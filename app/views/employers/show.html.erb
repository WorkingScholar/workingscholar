<div class="container">
  <div class="row">
    <div class="col s12" style="position: relative">
      <div class="section">

        <div class="col s4">
          <div class="logo">
            <%= image_tag("swirl_pattern.png") %>
          </div>
        </div>
        <div class="col s5">
          <h4 style="position: absolute; bottom: 0;"><%= @employer.name %></h4>
        </div>
        <div class="col s3" style="position: absolute; bottom: 0; right: 0;">
          <%= link_to edit_employer_path, class: "btn waves-effect waves-light", method: :get do %>
            Edit<i class="mdi-image-edit right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="col s4">
        <div class="section">
          <%= render "shared/social_sidebar" %>
        </div>
      </div>
      <div class="col s8">
        <div class="section">
          <%= render "profile", employer: @employer %>
        </div>
      </div>
    </div>
  </div>
</div>
