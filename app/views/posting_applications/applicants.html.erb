<div class="container">
  <div class="row">
    <table class="hoverable">
      <thead>
        <tr>
          <th>Name</th>
          <th>School</th>
          <th>Department</th>
          <th>Major</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @posting_applications.each do |posting_application| %>
          <tr>
            <td><%= posting_application.student.name  %></td>
            <td><%= posting_application.student.school_name  %></td>
            <td><%= posting_application.student.department_name  %></td>
            <td><%= posting_application.student.major_name  %></td>
            <td><%= posting_application.student.email  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
