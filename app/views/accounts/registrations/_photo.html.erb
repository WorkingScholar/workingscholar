<h5>Edit Photo</h5>
<div class="row">
  <div class="section">
    <div class="col s4">
      <%= form_for @account do |f| %>
        <div>
          <%= f.label :photo_url, "Upload Your Display Picture" %>
          <%= f.filepicker_field :photo_url, class:"waves-effect waves-light btn" %>
        <button class="btn-floating btn waves-effect waves-light" type="submit" name="action">
          <i class="mdi-content-save"></i>
        </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

