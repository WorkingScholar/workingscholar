<div class="container">
  <table>
    <thead>
      <tr>
        <th>Job Title</th>
        <th>Employer</th>
        <th>Duration</th>
        <th>Compensation</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @postings.each do |posting| %>
      <tr>
        <td><%= link_to posting.title, posting_path(posting) %></td>
        <td><%= posting.employer.name %></td>
        <td><%= posting.duration %></td>
        <td><%= posting.compensation %></td>
        <td><button class="btn waves-effect waves-light" type="submit" name="action">Apply
          <i class="mdi-content-send right"></i>
        </button>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
