<div class="row">
  <%= form_for(@posting) do |f| %>
    <div class="input-field col s12">
      <%= f.text_field :title %>
      <%= f.label :title %>
    </div>

    <div class="input-field col s6">
      <small class="grey-text">Duration (weeks)</small>
      <p class="range-field">
        <%= f.range_field :duration, min: "1", max: "4" %>
      </p>
    </div>

    <div class="input-field col s6">
      <small class="grey-text">Compensation type</small>
      <div class="row">
        <div class="col s2">
          <%= f.radio_button(:compensation, "Pay") %>
          <%= f.label(:compensation_pay, "Pay") %>
        </div>
        <div class="col s2">
          <%= f.radio_button(:compensation, "Referral") %>
          <%= f.label(:compensation_referral, "Referral") %>
        </div>
      </div>
    </div>

    <div class="input-field col s12">
      <%= f.text_area :description, class: "materialize-textarea" %>
      <%= f.label :description %>
    </div>

    <div class="actions input-field col s12">
      <button class="btn waves-effect waves-light" type="submit" name="action"><%= button_text %>
        <i class="mdi-content-send right"></i>
      </button>
    </div>
  <% end %>
</div>
